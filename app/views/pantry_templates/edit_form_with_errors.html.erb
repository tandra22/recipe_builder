<% if @pantry.errors.any? %>
  <% @pantry.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit pantry #<%= @pantry.id %>
</h1>

<hr>

<form action="/update_pantry/<%= @pantry.id %>" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @pantry.name %>">
  </div>

  <div class="form-group">
    <label for="item_id">
      Item
    </label>

    <%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :name, @pantry.item_id), :class => "form-control") %>
  </div>


  <div class="form-check">
    <input type="hidden" value="0" name="available_flag">
    <input id="available_flag" class="form-check-input" name="available_flag" type="checkbox" value="1" <%= "checked" if @pantry.available_flag %>>
    <label for="available_flag" class="form-check-label">
      Available flag
    </label>
  </div>

  <div class="form-group">
    <label for="quantity_available">
      Quantity available
    </label>

    <input type="text" id="quantity_available" name="quantity_available" class="form-control" value="<%= @pantry.quantity_available %>">
  </div>

  <div class="form-group">
    <label for="category_id">
      Category
    </label>

    <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name, @pantry.category_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="expiration_date">
      Expiration date
    </label>

    <input type="text" id="expiration_date" name="expiration_date" class="form-control" value="<%= @pantry.expiration_date %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update pantry
  </button>
</form>

<hr>

<a href="/pantries">
  Go back
</a>
