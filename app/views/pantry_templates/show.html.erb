<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Pantry #<%= @pantry.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/pantries" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link pantry start -->
      <div class="col">
        <a href="/pantries/<%= @pantry.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit pantry
        </a>
      </div>
      <!-- Edit link pantry end -->

      <!-- Delete link pantry start -->
      <div class="col">
        <a href="/delete_pantry/<%= @pantry.id %>" class="btn btn-block btn-outline-secondary">
          Delete pantry
        </a>
      </div>
      <!-- Delete link pantry end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @pantry.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Item
      </dt>
      <!-- Display item_id start -->
      <dd>
        <%= @pantry.item_id %>
      </dd>
      <!-- Display item_id end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @pantry.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Available flag
      </dt>
      <!-- Display available_flag start -->
      <dd>
        <%= @pantry.available_flag %>
      </dd>
      <!-- Display available_flag end -->

      <dt>
        Quantity available
      </dt>
      <!-- Display quantity_available start -->
      <dd>
        <%= @pantry.quantity_available %>
      </dd>
      <!-- Display quantity_available end -->

      <dt>
        Category
      </dt>
      <!-- Display category_id start -->
      <dd>
        <%= @pantry.category_id %>
      </dd>
      <!-- Display category_id end -->

      <dt>
        Expiration date
      </dt>
      <!-- Display expiration_date start -->
      <dd>
        <%= @pantry.expiration_date %>
      </dd>
      <!-- Display expiration_date end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@pantry.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@pantry.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

