<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All pantries
    </h1>

    <a href="/pantries/new" class="btn btn-block btn-outline-secondary">
      Add a new pantry
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Item
        </th>

        <th>
          User
        </th>

        <th>
          Available flag
        </th>

        <th>
          Quantity available
        </th>

        <th>
          Category
        </th>

        <th>
          Expiration date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pantries.each do |pantry| %>
      <tr>
        <!-- Display pantry.id start -->
        <td>
          <%= pantry.id %>
        </td>
        <!-- Display pantry.id end -->

        <!-- Display pantry.name start -->
        <td>
          <%= pantry.name %>
        </td>
        <!-- Display pantry.name end -->

        <!-- Display pantry.item_id start -->
        <td>
          <%= pantry.item_id %>
        </td>
        <!-- Display pantry.item_id end -->

        <!-- Display pantry.user_id start -->
        <td>
          <%= pantry.user_id %>
        </td>
        <!-- Display pantry.user_id end -->

        <!-- Display pantry.available_flag start -->
        <td>
          <%= pantry.available_flag %>
        </td>
        <!-- Display pantry.available_flag end -->

        <!-- Display pantry.quantity_available start -->
        <td>
          <%= pantry.quantity_available %>
        </td>
        <!-- Display pantry.quantity_available end -->

        <!-- Display pantry.category_id start -->
        <td>
          <%= pantry.category_id %>
        </td>
        <!-- Display pantry.category_id end -->

        <!-- Display pantry.expiration_date start -->
        <td>
          <%= pantry.expiration_date %>
        </td>
        <!-- Display pantry.expiration_date end -->

        <!-- Display pantry.created_at start -->
        <td>
          <%= time_ago_in_words(pantry.created_at) %> ago
        </td>
        <!-- Display pantry.created_at end -->

        <!-- Display pantry.updated_at start -->
        <td>
          <%= time_ago_in_words(pantry.updated_at) %> ago
        </td>
        <!-- Display pantry.updated_at end -->

        <td>
          <a href="/pantries/<%= pantry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
