<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All recipes
    </h1>

    <a href="/recipes/new" class="btn btn-block btn-outline-secondary">
      Add a new recipe
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Source website
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @recipes.each do |recipe| %>
      <tr>
        <!-- Display recipe.id start -->
        <td>
          <%= recipe.id %>
        </td>
        <!-- Display recipe.id end -->

        <!-- Display recipe.source_website start -->
        <td>
          <%= recipe.source_website %>
        </td>
        <!-- Display recipe.source_website end -->

        <!-- Display recipe.name start -->
        <td>
          <%= recipe.name %>
        </td>
        <!-- Display recipe.name end -->

        <!-- Display recipe.created_at start -->
        <td>
          <%= time_ago_in_words(recipe.created_at) %> ago
        </td>
        <!-- Display recipe.created_at end -->

        <!-- Display recipe.updated_at start -->
        <td>
          <%= time_ago_in_words(recipe.updated_at) %> ago
        </td>
        <!-- Display recipe.updated_at end -->

        <td>
          <a href="/recipes/<%= recipe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
