<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pantries

    <a data-toggle="collapse" href="#item_pantries_new_form">
      Add pantry
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @item.pantries.each do |pantry| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/pantries/<%= pantry.id %>">
          <%= pantry.name %>
        </a>

        <%if current_user == pantry.user %>
          <a href="/delete_pantry_from_item/<%= pantry.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="item_pantries_new_form">
        <%= render partial: "item_templates/item_pantries_new_form" %>
      </div>
    </div>

  </ul>
</div>
