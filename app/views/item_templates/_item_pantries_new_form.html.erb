<form action="/create_pantry_from_item" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @pantry.name %>">
  </div>

  <input type="hidden" name="item_id" value="<%= @item.id %>">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="available_flag">
      Available flag
    </label>
    <input id="available_flag" class="form-check-input" name="available_flag" type="checkbox" <%= "checked" if @pantry.available_flag %>>
  </div>

  <div class="form-group">
    <label for="quantity_available">
      Quantity available
    </label>

    <input type="text" id="quantity_available" name="quantity_available" class="form-control" value="<%= @pantry.quantity_available %>">
  </div>

  <div class="form-group">
    <label for="category_id">
      Category
    </label>

    <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name, @pantry.category_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="expiration_date">
      Expiration date
    </label>

    <input type="text" id="expiration_date" name="expiration_date" class="form-control" value="<%= @pantry.expiration_date %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create pantry
  </button>
</form>
