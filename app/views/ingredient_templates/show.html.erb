<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Ingredient #<%= @ingredient.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/ingredients" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/ingredients/<%= @ingredient.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit ingredient
        </a>
      </div>

      <div class="col">
        <a href="/delete_ingredient/<%= @ingredient.id %>" class="btn btn-block btn-outline-secondary">
          Delete ingredient
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Essential flag
      </dt>
      <dd>
        <%= @ingredient.essential_flag %>
      </dd>

      <dt>
        Quantity
      </dt>
      <dd>
        <%= @ingredient.quantity %>
      </dd>

      <dt>
        Measurement units
      </dt>
      <dd>
        <%= @ingredient.measurement_units %>
      </dd>

      <dt>
        Item
      </dt>
      <dd>
        <% if @ingredient.ingredient.present? %>
          <a href="/items/<%= @ingredient.item_id %>">
            <%= @ingredient.ingredient.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Recipe
      </dt>
      <dd>
        <% if @ingredient.recipe.present? %>
          <a href="/recipes/<%= @ingredient.recipe_id %>">
            <%= @ingredient.recipe.source_website %>
          </a>
        <% end %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @ingredient.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@ingredient.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@ingredient.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

