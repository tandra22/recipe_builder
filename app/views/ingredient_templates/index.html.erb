<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ingredients
    </h1>

    <a href="/ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new ingredient
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "ingredient_templates/ingredients_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Essential flag
        </th>

        <th>
          Quantity
        </th>

        <th>
          Measurement units
        </th>

        <th>
          Item
        </th>

        <th>
          Recipe
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ingredients.each do |ingredient| %>
      <tr>
        <td>
          <%= ingredient.id %>
        </td>

        <td>
          <%= ingredient.essential_flag %>
        </td>

        <td>
          <%= ingredient.quantity %>
        </td>

        <td>
          <%= ingredient.measurement_units %>
        </td>

        <td>
          <% if ingredient.ingredient.present? %>
            <a href="/items/<%= ingredient.ingredient.id %>">
              <%= ingredient.ingredient.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if ingredient.recipe.present? %>
            <a href="/recipes/<%= ingredient.recipe.id %>">
              <%= ingredient.recipe.source_website %>
            </a>
          <% end %>
        </td>

        <td>
          <%= ingredient.name %>
        </td>

        <td>
          <%= time_ago_in_words(ingredient.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(ingredient.updated_at) %> ago
        </td>

        <td>
          <a href="/ingredients/<%= ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @ingredients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
