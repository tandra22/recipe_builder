<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All categories
    </h1>

    <a href="/categories/new" class="btn btn-block btn-outline-secondary">
      Add a new category
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "category_templates/categories_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Ingredient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @categories.each do |category| %>
      <tr>
        <td>
          <%= category.id %>
        </td>

        <td>
          <%= category.name %>
        </td>

        <td>
          <% if category.ingredient.present? %>
            <a href="/items/<%= category.ingredient.id %>">
              <%= category.ingredient.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(category.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(category.updated_at) %> ago
        </td>

        <td>
          <a href="/categories/<%= category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @categories, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
