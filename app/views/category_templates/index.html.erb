<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All categories
    </h1>

    <a href="/categories/new" class="btn btn-block btn-outline-secondary">
      Add a new category
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Ingredient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @categories.each do |category| %>
      <tr>
        <!-- Display category.id start -->
        <td>
          <%= category.id %>
        </td>
        <!-- Display category.id end -->

        <!-- Display category.name start -->
        <td>
          <%= category.name %>
        </td>
        <!-- Display category.name end -->

        <!-- Display category.ingredient_id start -->
        <td>
          <%= category.ingredient_id %>
        </td>
        <!-- Display category.ingredient_id end -->

        <!-- Display category.created_at start -->
        <td>
          <%= time_ago_in_words(category.created_at) %> ago
        </td>
        <!-- Display category.created_at end -->

        <!-- Display category.updated_at start -->
        <td>
          <%= time_ago_in_words(category.updated_at) %> ago
        </td>
        <!-- Display category.updated_at end -->

        <td>
          <a href="/categories/<%= category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
